# Database (Postgres)
DATABASE_URL=postgresql://fleet_user:fleet_password_secure@localhost:5432/fleet_db

# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET=replace_this_with_a_secure_secret
JWT_EXPIRY=7d

# Millitrack
MILLITRACK_API_URL=https://mvts1.millitrack.com/api/middleMan/getDeviceInfo
MILLITRACK_ACCESS_TOKEN=your_millitrack_access_token_here
# Polling interval in milliseconds. Millitrack updates every 10-15s; keep >=10000
MILLITRACK_POLLING_INTERVAL=15000

# Thresholds
ALERT_FUEL_THEFT_THRESHOLD=15
ALERT_OVERSPEEDING_THRESHOLD=80

# Feature toggles
ENABLE_VENDOR_POLLING=true
ENABLE_DOCUMENT_ALERTS=true
ENABLE_GEOFENCE_MONITORING=true